@model crowdfunding_application.Models.ViewModels.CreateCampaignViewModel
@{
    ViewBag.Title = "Create campaign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="create" asp-controller="campaign" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Campaign.Title" class="control-label">How would you like to call your campaign?</label>
        <input type="text" asp-for="Campaign.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Campaign.Description" class="control-label">Tell everyone in few words what is it about</label>
        <textarea type="text" asp-for="Campaign.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Campaign.MoneyGoal" class="control-label">How much would you like to earn for development?</label>
        <input type="number" asp-for="Campaign.MoneyGoal" class="form-control" min="0" step="500" />
    </div>
    <div class="form-group">
        <label asp-for="Campaign.Category" class="control-label">Choose the field that suits your campaign best</label>
        <select type="text" asp-for="Campaign.Category" class="form-control">
            <option value="Technology">Technology</option>
            <option value="Design">Design</option>
            <option value="Art">Art</option>
            <option value="Food">Food</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="MainImage" class="control-label">Select your campaign's main image</label>
        <input type="file" asp-for="MainImage" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Create campaign" class="btn btn-outline-primary" />
    </div>
</form>