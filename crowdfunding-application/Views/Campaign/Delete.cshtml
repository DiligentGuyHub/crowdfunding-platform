@model crowdfunding_application.Models.Campaign
@{
    ViewBag.Title = "Delete campaign";
}

<div>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>Title</dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>Description</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>Goal</dt>
        <dd>
            @Html.DisplayFor(model => model.MoneyGoal)$
        </dd>
        <dt>Creation date</dt>
        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dd>
            <img style="max-width: 500px" src="@Model.HomeImage" />
        </dd>
    </dl>

    <div>
        <form asp-controller="Campaign" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-outline-danger" value="Delete" />
            </div>
        </form>
    </div>
</div>