@model crowdfunding_application.Models.PaymentTransaction
@{
    ViewBag.Title = "Donate to campaign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Pay", "Transaction", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CampaignId)
    @Html.HiddenFor(model => model.UserId)

    <form asp-action="create" asp-controller="news" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Amount" class="control-label">How much would you like to donate?</label>
            <input type="number" asp-for="Amount" class="form-control" min="0" step="5" />
        </div>

        <div class="form-group">
            <input type="submit" value="Donate" class="btn btn-outline-primary" />
        </div>
    </form>

